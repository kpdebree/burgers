<div class="containertitle">
  <div class="row text-center">
    <div class="col-md-12">
      <img src="assets/img/theburger.png" class="mainburger" alt="burger">
       <h1>Eat Da Burger!</h1> 
        <p id="intro">We have all kinds of special burgers! Add you favorite below and enjoy your burger.</p> 
    </div>
  </div>
</div>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour!</button>
        </form>
        <form action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
          <input type="hidden" name="id" value={{this.id}}>
          <button type="submit">DELETE!</button>
        </form>
        
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Eaten Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Un Devour!</button>
        </form>
        <form action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
          <input type="hidden" name="id" value={{this.id}}>
          <button type="submit">DELETE!</button>
        </form>

      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger!</h2>
<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> 
    UnDevour
  </div>

  <button type="submit">Add Burger</button>
</form>